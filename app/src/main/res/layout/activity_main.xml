<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Display -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end|center_vertical"
        android:textSize="32sp"
        android:background="#EEEEEE"
        android:text="0"
        android:padding="16dp"/>

    <!-- Button Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="16dp"
        android:useDefaultMargins="true">

        <!-- Row 1 -->
        <Button android:id="@+id/btnClear" android:text="AC" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnBackSpace" android:text="âŒ«" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <View android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnDivide" android:text="/" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>

        <!-- Row 2 -->
        <Button android:id="@+id/btn7" android:text="7" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn8" android:text="8" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn9" android:text="9" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnMultiply" android:text="*" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>

        <!-- Row 3 -->
        <Button android:id="@+id/btn4" android:text="4" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn5" android:text="5" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn6" android:text="6" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnMinus" android:text="-" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>

        <!-- Row 4 -->
        <Button android:id="@+id/btn1" android:text="1" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn2" android:text="2" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btn3" android:text="3" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnPlus" android:text="+" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>

        <!-- Row 5 -->
        <Button android:id="@+id/btn0" android:text="0" style="@style/ButtonStyle"
            android:layout_columnSpan="2"
            android:layout_width="0dp" android:layout_columnWeight="2"/>
        <Button android:id="@+id/btnpoint" android:text="." style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Button android:id="@+id/btnEqual" android:text="=" style="@style/ButtonStyle"
            android:layout_width="0dp" android:layout_columnWeight="1"/>
    </GridLayout>

</LinearLayout>
